= form_for :bug, :url => '/bugs', :html => {:multipart => true, :class => 'form-horizontal', :id => 'bug-submit-form'} do |f|
  %div.modal.hide.fade{"id" => "bugreportmodal"}
    %div.modal-header
      %a.close{"data-dismiss" => "modal"} x
      %h3= "Submit a bug"
    %div.modal-body
      %fieldset
        .control-group
          = f.label :subject, :class => 'control-label'
          .controls
            = f.text_field :subject
        .control-group
          = f.label :url, :class => 'control-label'
          .controls
            = f.text_field :url, :value => request.url
        .control-group
          = f.label :severity, :class => 'control-label'
          .controls
            = f.select(:severity, options_for_select(Bug.severity_options))
        .control-group
          = f.label :description, :class => 'control-label'
          .controls
            = f.text_area :description, :size => "33x11"
    %div.modal-footer
      = f.submit "Submit bug", :class => "btn btn-primary"
      = f.submit "Cancel", :class => "btn", :type => "button", "data-dismiss" => "modal"
